<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cons_lay_pro"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biodata"
            android:id="@+id/tv_biodata_title"
            android:textSize="23sp"
            android:textColor="#000000"
            android:fontFamily="@font/product_sans_bold"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9E9E9E"
            android:text="Data akun"
            android:id="@+id/tv_data_akun"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/tv_nama_akun"
            app:layout_constraintTop_toBottomOf="@id/tv_biodata_title"
            android:layout_marginTop="60px"
            android:fontFamily="@font/product_sans_bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_nama_akun"
            android:layout_width="330dp"
            android:layout_height="51.43dp"
            android:background="@drawable/rectangle_one"
            android:fontFamily="@font/product_sans_regular"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:textColor="#9E9E9E"
            android:text="Sugeng Musyaffa"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_data_akun"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,NotSibling,RtlSymmetry" />

        <TextView
            android:id="@+id/tv_jenis_kelamin"
            android:layout_width="330dp"
            android:layout_height="51.43dp"
            android:background="@drawable/rectangle_one"
            android:fontFamily="@font/product_sans_regular"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:textColor="#9E9E9E"
            android:text="Laki-laki"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nama_akun"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,NotSibling,RtlSymmetry" />

        <TextView
            android:id="@+id/tv_ttl"
            android:layout_width="330dp"
            android:layout_height="51.43dp"
            android:background="@drawable/rectangle_one"
            android:fontFamily="@font/product_sans_regular"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:textColor="#9E9E9E"
            android:text="28 Agustus 2022"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_jenis_kelamin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,NotSibling,RtlSymmetry" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="330dp"
            android:layout_height="51.43dp"
            android:background="@drawable/rectangle_one"
            android:fontFamily="@font/product_sans_regular"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:textColor="#9E9E9E"
            android:text="Username"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_ttl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,NotSibling,RtlSymmetry" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="330dp"
            android:layout_height="51.43dp"
            android:background="@drawable/rectangle_one"
            android:fontFamily="@font/product_sans_regular"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:textColor="#9E9E9E"
            android:text="Email"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,NotSibling,RtlSymmetry" />

        <TextView
            android:id="@+id/tv_no_hp"
            android:layout_width="330dp"
            android:layout_height="51.43dp"
            android:background="@drawable/rectangle_one"
            android:fontFamily="@font/product_sans_regular"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:textColor="#9E9E9E"
            android:text="08----------"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,NotSibling,RtlSymmetry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9E9E9E"
            android:text="Data Riwayat Ibu"
            android:id="@+id/tv_data_riwayat"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/tv_nama_akun"
            app:layout_constraintTop_toBottomOf="@id/tv_no_hp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/product_sans_bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_usia_ortu"
            android:layout_width="330dp"
            android:layout_height="51.43dp"
            android:background="@drawable/rectangle_one"
            android:fontFamily="@font/product_sans_regular"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:textColor="#9E9E9E"
            android:text="Usia (Tahun)"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_data_riwayat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,NotSibling,RtlSymmetry" />

        <TextView
            android:id="@+id/tv_tinggi_ortu"
            android:layout_width="330dp"
            android:layout_height="51.43dp"
            android:background="@drawable/rectangle_one"
            android:fontFamily="@font/product_sans_regular"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:textColor="#9E9E9E"
            android:text="Tinggi (cm)"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_usia_ortu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,NotSibling,RtlSymmetry" />

        <TextView
            android:id="@+id/tv_berat_ortu"
            android:layout_width="330dp"
            android:layout_height="51.43dp"
            android:background="@drawable/rectangle_one"
            android:fontFamily="@font/product_sans_regular"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:textColor="#9E9E9E"
            android:text="Berat (kg)"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_tinggi_ortu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,NotSibling,RtlSymmetry" />

        <TextView
            android:id="@+id/tv_riwaya_ortu"
            android:layout_width="330dp"
            android:layout_height="51.43dp"
            android:background="@drawable/rectangle_one"
            android:fontFamily="@font/product_sans_regular"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:textColor="#9E9E9E"
            android:text="Riwayat"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_berat_ortu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,NotSibling,RtlSymmetry" />
        
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:id="@+id/rv_data_anak"
            app:layout_constraintStart_toStartOf="@+id/tv_nama_akun"
            app:layout_constraintTop_toBottomOf="@id/tv_riwaya_ortu"
            tools:listitem="@layout/list_data_anak"
            android:layout_marginTop="10dp"
            tools:itemCount="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape_red"
            android:fontFamily="@font/product_sans_bold"
            android:lineHeight="22sp"
            android:shadowColor="#8EC6E8"
            android:text="Keluar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@id/rv_data_anak"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/cl"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>