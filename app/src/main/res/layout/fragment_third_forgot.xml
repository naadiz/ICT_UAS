<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ThirdForgotFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_final_forgot"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="Buat password baru untuk akunmu"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="40sp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/et_thepass"
        tools:ignore="MissingConstraints,RtlCompat" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_thepass"
        android:layout_width="300dp"
        android:layout_height="51.43dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="21.04px"
        android:background="@drawable/rectangle_one"
        android:fontFamily="@font/product_sans_regular"
        android:hint="Password Baru"
        android:includeFontPadding="true"
        android:inputType="textEmailAddress"
        android:paddingStart="14.96dp"
        android:singleLine="true"
        android:textColor="#686868"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_final_forgot"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_thepass_confirm"
        android:layout_width="300dp"
        android:layout_height="51.43dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="21.04px"
        android:background="@drawable/rectangle_one"
        android:fontFamily="@font/product_sans_regular"
        android:hint="Konfirmasi Password Baru"
        android:includeFontPadding="true"
        android:inputType="textEmailAddress"
        android:paddingStart="14.96dp"
        android:singleLine="true"
        android:textColor="#686868"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_thepass"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit_password"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/product_sans_bold"
        android:lineHeight="22sp"
        android:shadowColor="#8EC6E8"
        android:text="Buat Password"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/et_thepass_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="800px"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>