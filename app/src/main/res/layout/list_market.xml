<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:id="@+id/cv_market"
        app:cardElevation="5dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_market"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login"
                android:layout_width="300dp"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/product_sans_bold"
                android:shadowColor="#8EC6E8"
                android:text="Beli"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_market"
                app:layout_constraintEnd_toEndOf="@id/iv_market"
                app:layout_constraintStart_toStartOf="@id/iv_market"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/cv_market"
        app:layout_constraintTop_toTopOf="@id/cv_market"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/tv_market"
        android:textSize="25sp"
        android:fontFamily="@font/inter_semibold"
        tools:ignore="MissingConstraints"
        android:text="Lorem Ipsum"
        android:elevation="100dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="200dp"
        android:id="@+id/tv_sub"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/cv_market"
        app:layout_constraintTop_toBottomOf="@id/tv_market"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed volutpat metus vitae ligula blandit scelerisque. Phasellus at elit pulvinar, varius lorem ut, fringilla tellus. "
        android:maxLines="4"
        android:elevation="100dp"
        android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>